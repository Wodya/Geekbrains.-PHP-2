{% extends 'layouts/main.twig' %}

{% block content %}
    {% for order in orders %}
        <p>{{order.date}}</p>
        <p>{{order.state}}</p>
        {% if user.is_admin == 1 and order.state != 'Завершен' %}
            <a href="/order/close?id={{ order.id }}">Завершить</a>
        {% endif %}
        <hr>
    {% else %}
        <br>
        Заказов нет
    {% endfor %}
<br>
{% endblock %}
